<h1>Agregar nuevo contacto</h1>

<%= form_tag :action => 'create' do %>
<p><label for = "contacto_nombre">Nombre</label>:
<%= text_field 'contactos', 'nombre' %></p>

<p><label for = "contacto_apellidos">Apellidos</label>:
<%= text_field 'contactos', 'apellidos' %></p>

<p><label for = "contacto_telefono">Telefono</label>:
<%= text_field 'contactos', 'telefono' %></p>

<p><label for = "contacto_correo">Correo</label>:
<%= text_field 'contactos', 'correo' %></p>

<p><label for = "contacto_direccion">Direccion</label><br/>

<%= text_area 'contactos', 'direccion' %></p>
<%= submit_tag "Crear" %>

<% end -%>
<%= link_to 'Regreso', {:action => 'list'} %>